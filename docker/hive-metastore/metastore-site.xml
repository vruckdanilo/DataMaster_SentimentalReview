<configuration>
    <!-- Thrift URI for the Hive Metastore -->
    <property>
        <name>metastore.thrift.uris</name>
        <value>thrift://hive-metastore:9083</value>
        <description>Thrift URI for the remote metastore. Used by metastore client to connect to remote metastore.</description>
    </property>

    <!-- Task thread management -->
    <property>
        <name>metastore.task.threads.always</name>
        <value>org.apache.hadoop.hive.metastore.events.EventCleanerTask</value>
    </property>

    <!-- Expression proxy configuration -->
    <property>
        <name>metastore.expression.proxy</name>
        <value>org.apache.hadoop.hive.metastore.DefaultPartitionExpressionProxy</value>
    </property>

    <!-- MySQL connection details for the Hive Metastore -->
    <property>
        <name>javax.jdo.option.ConnectionDriverName</name>
        <value>com.mysql.cj.jdbc.Driver</value>
    </property>

    <property>
        <name>javax.jdo.option.ConnectionURL</name>
        <value>jdbc:mysql://mysql:3306/metastore_db</value>
    </property>

    <property>
        <name>javax.jdo.option.ConnectionUserName</name>
        <value>admin</value>
    </property>

    <property>
        <name>javax.jdo.option.ConnectionPassword</name>
        <value>admin</value>
    </property>

    <!-- Configure the warehouse directory in MinIO (S3) -->
    <property>
        <name>hive.metastore.warehouse.dir</name>
        <value>s3a://datalake/warehouse/</value>
        <description>Location of default database for the warehouse</description>
    </property>

    <!-- S3A configuration for MinIO -->
    <property>
        <name>fs.s3a.access.key</name>
        <value>minio</value>
    </property>

    <property>
        <name>fs.s3a.secret.key</name>
        <value>minio123</value>
    </property>

    <property>
        <name>fs.s3a.endpoint</name>
        <value>http://minio:9000</value>
    </property>

    <property>
        <name>fs.s3a.path.style.access</name>
        <value>true</value>
    </property>

    <property>
        <name>fs.s3a.connection.ssl.enabled</name>
        <value>false</value>
    </property>

    <!-- Enable S3A file system for reading from s3a://datalake -->
    <property>
        <name>fs.defaultFS</name>
        <value>s3a://datalake/</value>
        <description>Default file system scheme, pointed to MinIO S3-compatible store.</description>
    </property>
</configuration>
